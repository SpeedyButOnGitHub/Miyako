{
	"engines": {
		"node": ">=18.17 <23"
	},
	"scripts": {
		"smoke": "node ./scripts/smoke-load.js",
		"start": "node index.js",
		"start:dev": "nodemon --watch src --ext js,json --ignore config/*.json index.js",
		"start:bg": "node ./scripts/startBot.js",
		"start:pm2": "pm2 start ecosystem.config.js --env production",
		"start:pm2:dev": "pm2 start ecosystem.config.js --env development --watch",
		"stop": "node ./scripts/stopBot.js",
		"import-levels": "node ./scripts/import-levels.js",
		"test": "node ./scripts/fast-tests.js",
		"test:full": "jest --runInBand",
		"lint": "eslint \"src/**/*.js\"",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install",
		"precommit": "lint-staged",
		"secret-scan": "node ./scripts/secret-scan.js",
		"restart": "node ./scripts/npm-restart-dispatch.js",
		"restart:miyako": "npm run restart:miyako:exec",
		"restart:miyako:exec": "node ./scripts/restart-miyako-exec.js"
	},
	"jest": {
		"setupFiles": [
			"<rootDir>/tests/jest.setup.js"
		]
	},
	"dependencies": {
		"discord.js": "^14.22.1",
		"dotenv": "^17.2.2",
		"ms": "^2.1.3"
	},
	"devDependencies": {
		"eslint": "^8.57.0",
		"eslint-plugin-unused-imports": "^3.2.0",
		"jest": "^29.7.0",
		"nodemon": "^3.1.7",
		"prettier": "^3.3.3",
		"husky": "^8.0.0",
		"lint-staged": "^13.2.3"
	}
}
